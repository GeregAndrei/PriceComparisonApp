<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Items.ItemDisplay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_border"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/titleItemTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Frigider cu doua usi Heinner HF-205F+, 205 l, Clasa F, IIluminare LED, 3 rafturi de sticla, H 143.4 cm, Alb "
                    android:textColor="@color/black"
                    android:textSize="21sp" />

            </LinearLayout>

        </LinearLayout>

        <CheckBox
            android:id="@+id/bookmarkButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bookmarked" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:srcCompat="@tools:sample/avatars[2]" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/linkListRv"
            android:layout_width="409dp"
            android:layout_height="wrap_content" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/analyzeButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Analyze Item" />

                <ViewStub
                    android:id="@+id/analysisStub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout="@layout/analysis_stub" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonTechnical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/technicalSpecs" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/showCommentsButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Show Comments" />

                    <ViewStub
                        android:id="@+id/commentsViewStub"
                        android:layout_width="match_parent"
                        android:layout_height="500dp"
                        android:layout="@layout/activity_comments_stub" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/buttonCloseComment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Close Comments" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/buttonAddComment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Add Comment" />
                </LinearLayout>
            </LinearLayout>



    </LinearLayout>
</LinearLayout>