<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu.CompareActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Left item -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageLeft"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />

                    <Button
                        android:id="@+id/buyLeftBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Buy Lowest Price" />

                </LinearLayout>

                <!-- Right item -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageRight"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />

                    <Button
                        android:id="@+id/buyRightBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Buy Lowest Price" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/comparisonText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@color/black"
                android:textSize="16dp"
                android:hint="please wait"
                android:layout_marginTop="16dp" />
            <Button
                android:id="@+id/btnExplainAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Explain All Pros and Cons in Detail"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
